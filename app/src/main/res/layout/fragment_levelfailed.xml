<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/unselected_tab"
    tools:context=".GameActivity">

    <LinearLayout
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="64dp"
        android:layout_marginTop="64dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/levelfailed"
        android:orientation="vertical"
        android:gravity="center"
        android:elevation="8dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/gameover_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ran Out of Moves"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </LinearLayout>

        <!-- Body -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/star" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_margin="2dp"
                    android:background="@drawable/star" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/star" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1234"
                android:textAlignment="center"
                android:textColor="@color/unselected_tab"
                android:textSize="40sp" />

        </LinearLayout>

        <!-- Footer -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="16dp">

            <Button
                android:id="@+id/levelfailed_exit"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="@drawable/purple_button"
                android:elevation="2dp"
                android:text="Exit"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:layout_margin="4dp"/>

            <Button
                android:id="@+id/levelfailed_retry"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="@drawable/green_button"
                android:elevation="2dp"
                android:text="Retry"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:layout_margin="4dp"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>